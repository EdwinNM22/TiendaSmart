<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NubeCRUD.Views.EditProductoPage"
             Title="EditProductoPage">

    <StackLayout Padding="20">
        <Label Text="Agregar Producto" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="NombreEntry" Placeholder="Nombre del Producto "/>
        <Entry x:Name="DescripcionEntry" Placeholder="Descripcion del Producto "/>
        <Entry x:Name="PrecioEntry" Placeholder="Precio del Producto" />

        <Button Text="Actualizar" Clicked="OnUpdateProductClicked" />

    </StackLayout>
</ContentPage>