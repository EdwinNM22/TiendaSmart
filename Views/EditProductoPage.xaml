<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiendaSmart.Views.EditProductoPage"
             Title="Editar" BackgroundColor="#00796B">

    <VerticalStackLayout Padding="20" Spacing="20">
        
        <Label Text="MenÃº Principal"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"/>

       

            <!-- Campos de entrada -->
            <Frame BackgroundColor="White" CornerRadius="12" Padding="0" HasShadow="True" BorderColor="Transparent">

            <Entry x:Name="NombreEntry"
                        Placeholder="Nombre del Producto"
                        PlaceholderColor="#888"
                        FontSize="18"
                        BackgroundColor="White"
                        HeightRequest="50"
                        TextColor="Black"
                        Margin="0,10,0,0"/>
            </Frame>
        
            <Frame BackgroundColor="White" CornerRadius="12" Padding="0" HasShadow="True" BorderColor="Transparent">

            <Entry x:Name="DescripcionEntry"
                        Placeholder="Descripcion"
                        PlaceholderColor="#888"
                        FontSize="18"
                        BackgroundColor="White"
                        HeightRequest="50"
                        TextColor="Black"
                        Margin="0,10,0,0"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="12" Padding="0" HasShadow="True" BorderColor="Transparent">

            <Entry x:Name="PrecioEntry"
                        Placeholder="Precio"
                        PlaceholderColor="#888"
                        FontSize="18"
                        BackgroundColor="White"
                        HeightRequest="50"
                        TextColor="Black"
                        Margin="0,10,0,0"/>
            </Frame>

            <Button Text="Actualizar"
                        Clicked="OnUpdateProductClicked"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="10"
                        HeightRequest="50"
                        WidthRequest="300"
                        HorizontalOptions="Center"
                        Margin="0,20,0,0">

            <Button.ImageSource>
                <FileImageSource File="add_icon.png" />
            </Button.ImageSource>

            </Button>
        
    </VerticalStackLayout>
        
</ContentPage>